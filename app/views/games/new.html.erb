<% @letters.each do |letter| %>
<li><strong><%=letter.upcase%></strong></li>
<%end %>

<p>What's the longest word you can write with these letters ?</p>
<form action="score", method="POST">
<input type="text" name="guess" placeholder="Type your guess here" class="input-text">
<input type="submit" class="input-submit">
<input type="text" name='letters' value=<%= @letters.join %> hidden>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
